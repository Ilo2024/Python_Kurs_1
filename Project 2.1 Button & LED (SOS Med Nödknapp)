from machine import Pin
import time

led = Pin(15, Pin.OUT)                   
button = Pin(13, Pin.IN, Pin.PULL_UP)    #Create button object from Pin13 , Set GP13 to input

try:
 def send_sos(num_of_sos):
    while True:
        for _ in range(num_of_sos):
            for _ in range(3):
                led.value(1)
                time.sleep(0.5)
                
            for _ in range(3):
                led.value(1)
                time.sleep(1.5)
                
            for _ in range(3):
                led.value(1)
                time.sleep(0.5)          
            time.sleep(3)
        break
except:
    pass
